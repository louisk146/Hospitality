
<div class="container page-content">
  <div class="row">
    <div class="span8">
      <div class="box-container">
        <div class="padding30">
          <h2 class="page-title">List your event</h2> 

            <%= f.label :name %>
            <%= f.text_field :name %>
            <%= f.date_time_select :date %>


            <%= f.label :address %>
            <%= f.text_field :address1, placeholder: " Address line 1" %>
            <%= f.text_field :address2, placeholder: " Address line 2 " %><br/>
            <%= f.text_field :county, placeholder: 'County' %><br>  
            <%= f.text_field :postalcode, placeholder: 'Postalcode' %>  

            <%= f.label :event_description %> 
            <%= f.text_area :description, size: "50x10" , placeholder: 
            "A bit about the event

            " %></br>

            <%= f.label :contact_information %> 
            <%= f.text_field :phone, placeholder:"Phone number: Optional" %> <br/>
            <%= f.text_field :socialmedia, placeholder: "social media contact or personal portfolio" %>
            <%= f.label :email %>
            <%= f.text_field :email, placeholder: "Email" %> 
        
            
            <%= f.select :category_id, Category.all.map{ |f| [f.name, f.id] } %>
            <%= f.label :Country %>
            <%= f.text_field :country,placeholder:"Country" %>
            <%= f.text_field :city , placeholder: "City" %>
 
            <br/>
            <%= f.submit class: "btn span3 btn-realto-form btn-large" %>
          <% end %>

          
        </div>
      </div>
    </div>
