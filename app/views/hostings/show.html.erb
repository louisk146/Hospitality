
    <div class="container page-content">
     <%= image_tag @hosting.image_url %>
      <div class="row">
        <div class="span8">
          <div class="box-container">
          
            <!-- .cycle-slideshow -->
            <div id="adv-custom-pager"></div>
            <div class="clearfix">
              <div class="clearfix padding10">
                <h2 class="prop-title pull-left margin10"><%= @hosting.name %>
                </h2>
                
                <% if current_user.try(:admin?) %>
                <h2 class="prop-title pull-right margin10">
                <small><%= link_to "Edit", edit_hosting_path, class: "btn btn-primary btn-mini" %></small>
                <small><%= link_to "Delete", hosting_path, method: :delete, data: {confirm: "Are you sure you want to delete?"}, class: "btn btn-danger btn-mini" %></small>
                </h2>
                <% else %>
                <% end %>
                
                
                <span class="prop-price pull-left serif italic">*</span>
              </div>
              <div class="clearfix padding10 row-fluid">
                <ul class="more-info pull-left span6">
                  <li class="info-label2 clearfix"><span class="pull-left">Category</span>
                  <span class="qty pull-right"><%= @hosting.category.name %></span></li> 
                     <li class="info-label2 clearfix"><span class="pull-left">Email</span>
                    <span class="qty pull-right"><%= @hosting.email %></span></li>
                  <li class="info-label2 clearfix"><span class="pull-left">Portfolio</span>
                    <span class="qty pull-right"></span><%= @hosting.socialmedia %></li>
                  <li class="info-label2 clearfix"><span class="pull-left">Phone</span>
                    <span class="qty pull-right"><%= @hosting.phone %></span></li>
                </ul>
                <ul class="more-info2 pull-right2 span6">
                  <li class="info-label clearfix"><span class="pull-left">location:</span>
                    <!--<span class="qty pull-right">-->
                      <%= @hosting.country  %>, 
                      <%= @hosting.city     %>, 
                     <!-- <%= @hosting.address1 %>, -->
                     <!-- <%= @hosting.address2 %>, -->
                    <!-- <%= @hosting.county   %> -->
                    <!-- <%= @hosting.postalcode %>. -->

                    <!--</span>--></li>
                <!--  <li class="info-label clearfix"><span class="pull-left">Listing
                    type:</span>
                    <span class="qty pull-right"></span></li>
                  <li class="info-label clearfix"><span class="pull-left">...</span>
                    <span class="qty pull-right">...</span></li>
                  <li class="info-label clearfix"><span class="pull-left">...</span>
                    <span class="qty pull-right">...</span></li> -->
                </ul>
              </div>
              <div class="clearfix padding30">
                <h3>About Me</h3>
                <p> <%= @hosting.description %> </p>
              </div>
                 <div class="clearfix padding30">
                <h3>Comments</h3>
                  <% if @comments.blank? %>
                   <p>No comments yet</p>
                  <% else %>
                      <table class='table'>
                        <thead>
                          <tr>
                            <th class="col-mid-3"></th>
                            <th class="col-mid-9"></th>
                          </tr>
                          <tbody> 
                      <% @comments.each do |comment| %>
                  <tr>
                  
                    <td>
                      <h5> <%= "#{comment.user.first_name} #{comment.user.last_name} #{comment.user.country}" %></h5>
                    </td>
                  <td>
                  <%= comment.comment %>
                </td>
                </tr>
                  <% end %>
                 </tbody>
                </table> 
              <% end %>
              </mark>
              <%= link_to "write a comment", new_hosting_comment_path(@hosting), class: "btn btn-small btn-realto" %>
              </div>
            </div>
          </div>
        </div>
