<div id="latest-properties">
  <div class="container">
    <div class="row">
      <p><%= link_to "View all hosts" ,search_hostings_path,class: "pull-right btn btn-realto span3" %> </p>
      <div class="span12">
        <h2 class="secion-title"><mark>Hospitable people near you: </mark></h2>
      <div class="carousel-navigation pull-right">
          <a class="left carousel-control pull-left" href="#realto-carousel" data-slide="prev">‹</a>
          <a class="right carousel-control pull-right" href="#realto-carousel" data-slide="next">›</a>
        </div>
      </div>
    </div>
    
    <!-- Begin Carousel -->
    <div class="row">
      <div id="realto-carousel" class="carousel slide span12">
        
        <div class="carousel-inner">
          <div class="item active">
            <ul class="thumbnails">
              <% @hostings.last(3).each do |hosting| %>
              
              <li class="span4 box-container">
                <div class="holder">
                  <a class="overlay" title="property title" href="#">
                    <span class="more"></span>
                  
                     <% if hosting.image_url.present? %>
                                    <%= link_to image_tag(hosting.image.url.to_s), hosting %>
                                    <% else %>
                                    <%= link_to image_tag("http://placehold.it/370x210"), hosting %>
                                    <% end %>
                  </a>
                  <span class="prop-tag"><%= hosting.city %></span>
                  <div class="prop-info">
                    <h3 class="prop-title"><%= link_to hosting.name, hosting %></h3>
                    <ul class="more-info clearfix">
                      <li class="info-label clearfix"><span class="pull-left">Location</span> <span class="qty pull-right"><%= hosting.city %></span></li>
                     <li class="info-label clearfix"><span class="pull-left">Category</span> <span class="qty pull-right"><%= hosting.category.name %></span></li> 
                    </ul>
                  </div>
                </div>

                <% end %>
              <!-- .item -->
              
             </div class="item">
              <ul class="thumbnails">
                <% @hostings.order(:id).reverse_order.limit(3).offset(3).each do |hosting| %>

              <li class="span4 box-container">
                <div class="holder">
                  <a class="overlay" title="property title" href="#">
                    <span class="more"></span>
                     <% if hosting.image_url.present? %>
                                    <%= link_to image_tag(hosting.image.url.to_s), hosting %>
                                    <% else %>
                                        <%= link_to image_tag("http://placehold.it/370x210"), hosting %>
                                    <% end %>
                  </a>
                  <span class="prop-tag">Same country!</span>
                  <div class="prop-info">
                    <h3 class="prop-title"><%= link_to hosting.name, hosting %></h3>
                    <ul class="more-info clearfix">
                      <li class="info-label clearfix"><span class="pull-left">Location</span> <span class="qty pull-right"><%= hosting.city %></span></li>
                     <li class="info-label clearfix"><span class="pull-left">Category</span> <span class="qty pull-right"><%= hosting.category.name %></span></li> 
                    </ul>
                  </div>
                </div>

                <% end %>
        </ul>
      </div><!-- .carousel-inner -->
      </div>
    </div><!--End Carousel-->
    
  </div><!-- .container  -->
</div><!-- #latest-properties  -->


